@model Customer;

<div class="row my-2">
    <div class="col">
        <h4>Add Customer</h4>
        <div style="margin-bottom:10px">Enter data for new customer:</div>
        
        <form method="post">
            <div class="form-group">
                <label asp-for="@Model.firstName"></label>
                @* <label>First Name</label> *@
                <input type="text" asp-for="@Model.firstName" class="form-control" maxlength="50" />
                <span asp-validation-for="@Model.firstName" class="text-danger" />
            </div>
            
            <div class="form-group">
                <label>Last Name</label>
                <input type="text" asp-for="@Model.lastName" class="form-control" maxlength="50" />
                <span asp-validation-for="@Model.lastName" class="text-danger" />
            </div>

            <div class="form-group">
                <label>Address</label>
                <input type="text" asp-for="@Model.address" class="form-control" maxlength="100" />
            </div>

            <div class="form-group">
                <label>City</label>
                <input type="text" asp-for="@Model.city" class="form-control" maxlength="100" />
            </div>

            <div class="form-group">
                <label>Province</label>
                <input type="text" asp-for="@Model.province" class="form-control" maxlength="50" />
            </div>

            <div class="form-group">
                <label>Postal</label>
                <input type="text" asp-for="@Model.postal" class="form-control" maxlength="7" />
                <span asp-validation-for="@Model.postal" class="text-danger" />
            </div>

            <div class="form-group">
                <label>Phone</label>
                <input type="text" asp-for="@Model.phone" class="form-control" maxlength="15" />
                <span asp-validation-for="@Model.phone" class="text-danger" />
            </div>

            @* <div asp-validation-summary="All" class="text-danger"></div> *@

            <div class="form-group">
                <input type="submit" asp-controller="Home" asp-action="AddSubmit" class="btn btn-warning" Text="Add" />
                <a asp-controller="Home" asp-action="Index"><input type="button" class="btn btn-warning" value="Cancel" /></a>
            </div>
        </form>

    </div>
</div>