@model Customer;

<div class="row" style="margin-bottom:20px;">
    <div class="col-sm-12">
        <h4>Delete Customer</h4>
        <div style="margin-bottom:10px">Select the customer you wish to delete:</div>
        
        <form method="post">

            <div class="form-group">
                <select id="lstCustomers" asp-items="ViewBag.selectList" asp-for="@Model.customerID" class="btn-secondary form-control"></select>
            </div>

            <div class="form-group">
                <input type="submit" asp-controller="Home" asp-action="DeleteSubmit" class="btn btn-warning" value="Delete" />
                <input type="submit" asp-controller="Home" asp-action="Index" class="btn btn-warning" value="Cancel" />
            </div>
        </form>

    </div>
</div>